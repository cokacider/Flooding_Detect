<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/list_item_tvlayout"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="text"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/list_item_location"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="text"
            android:textSize="16dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/list_item_serialNumber"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="serialNumber"
            android:textSize="16dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/list_item_conditionText"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="상태"/>
    <ImageView
        android:layout_marginRight="15dp"
        android:id="@+id/list_item_condition"
        android:layout_gravity="center"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ovalgreen"/>

</LinearLayout>